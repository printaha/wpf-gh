<UserControl x:Class="wpf_gh.HealthBar"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:wpf_gh"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <Grid>
        <StackPanel Background="Black" Orientation="Horizontal" Width="80" Height="20">
            <Button Background="Transparent" Name="MinusButton" Width="40" Height="20" Click="MinusButtonClicked">
                <TextBlock Name="CurrentHealth" Foreground="White" FontFamily="Franklin Gothic Medium" Text="" FontSize="16" Margin="0,-1,0,0"/>
            </Button>
            <Button Background="Transparent" Name="plus" Width="40" Height="20" Click="PlusButtonClicked">
                <TextBlock Name="MaxHealth" Foreground="White" FontFamily="Franklin Gothic Medium" Text="" FontSize="16" Margin="0,-1,0,0"/>
            </Button>
        </StackPanel>
    </Grid>
</UserControl>
